<script>
function validate() {
    var valid = true;   
    $(".form control demoInputBox").css('background-color','');
    $(".info").html('');

    if(!$("#date_picker").val()) {
        $("#date_picker-info").html("(required)");
        $("#date_picker").css('background-color','#FFFFDF');
        valid = false;
    }
}
